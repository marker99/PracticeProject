@page "/addPerson"
@using PracticeProject.Models
@using PracticeProject.Resources
@using PracticeProject.Data
@using ButtonType = Radzen.ButtonType

<RadzenTemplateForm Data="@newPerson" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="container-fluid">
        <div class="row">
            <h3>Person Info</h3>
            <div class="col-md-5">
                <RadzenFieldset>
                    <div class="row">
                        <div class="col-md-2 align-items-center d-flex">
                            <RadzenLabel Text="@StringResource.FirstName" />
                        </div>
                        <div class="col-md-8">
                            <RadzenTextBox Style="width: 100%" @bind-Value="newPerson.FirstName" Name="FirstName" Placeholder="First name" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 align-items-center d-flex">
                            <RadzenLabel Text="@StringResource.LastName" />
                        </div>
                        <div class="col-md-8">
                            <RadzenTextBox Style="width: 100%" @bind-Value="newPerson.LastName" Name="LastName" Placeholder="Last name"/>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 align-items-center d-flex">
                            <RadzenLabel Text="@StringResource.Address" />
                        </div>
                        <div class="col-md-8">
                            <RadzenTextBox Style="width: 100%" @bind-Value="newPerson.Address" Name="Address" Placeholder="Address" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 align-items-center d-flex">
                            <RadzenLabel Text="@StringResource.PhoneNumber" />
                        </div>
                        <div class="col-md-8">
                            @*<RadzenTextBox Style="width: 100%" @bind-Value="newPerson.PhoneNumber" Name="PhoneNumber" />*@
                            <RadzenMask Mask="********" CharacterPattern="[0-9]" Name="PhoneNumber" @bind-Value=@newPerson.PhoneNumber Style="width: 100%" Placeholder="Phone number" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 align-items-center d-flex ">
                            <RadzenLabel Text="@StringResource.Age" />
                        </div>
                        <div class="col-md-3">
                            <RadzenNumeric class="" Style="width: 100%" Name="Age" @bind-Value="newPerson.Age" Placeholder="Age" />
                        </div>

                        <div class="col-md-1 align-items-center d-flex ">
                            <RadzenLabel Text="@StringResource.Gender" />
                        </div>
                        <div class="col-md-4">
                            <RadzenDropDown @bind-Value="newPerson.Gender" AllowClear="true" Placeholder="Select gender"
                                            Data="@_genderList" style="width: 100%;" Name="Gender">
                            </RadzenDropDown>
                            @*<RadzenTextBox Style="width: 100%" @bind-Value="newPerson.Gender" Name="Gender" />*@
                        </div>
                    </div>
                </RadzenFieldset>

            </div>
            <div class="row ">
                <div class="col-md-5 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
                    <RadzenButton class="button_green_colour" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Click="@AddNewPerson" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="@Cancel" />
                </div>
            </div>
        </div>


    </div>
</RadzenTemplateForm>